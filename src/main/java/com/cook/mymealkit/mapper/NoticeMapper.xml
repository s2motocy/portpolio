<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.mymealkit.mapper.NoticeMapper">
	<!-- 게시글목록 조회 -->
	<select id="selectAll" resultType="com.cook.mymealkit.domain.NoticeVO">
        SELECT *
        FROM notice
    </select>
    
    <!-- 게시글 조회 -->
    <select id="selectById" resultType="com.cook.mymealkit.domain.NoticeVO">
        SELECT *
        FROM notice
        WHERE bno = #{bno}
    </select>
    
        <!-- 게시글 입력 -->
    <insert id="insert">
        INSERT INTO notice (bno, title, content,writer)
        VALUES (seq_notice.nextval, #{title}, #{content}, #{writer})
    </insert>
    
        <!-- 게시글 업데이트 -->
    <update id="update">
        update notice set title = #{title}, 
        content = #{content}, updatedate = sysdate where bno = #{bno}
    </update>
    
        <!-- 게시글 삭제 -->
    <delete id="deleteById">
        DELETE FROM notice
        WHERE bno = #{bno}
    </delete>
</mapper>